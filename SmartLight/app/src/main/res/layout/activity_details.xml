<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_01"
    tools:context="vu.SmartLight.iot.Details">

    <Switch
        android:id="@+id/powerswitch"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_below="@+id/detailDesc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:text="Power"
        android:textColor="#FFFFFF"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/tv_brightness"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/powerswitch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:layout_alignLeft="@+id/brightness"
        android:gravity="center"
        android:text="Brightness :"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/brightness"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_below="@+id/powerswitch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#11000000"
        android:ems="10"
        android:gravity="right"
        android:text="0%"
        android:textColor="#ffffff"
        android:textSize="18sp" />
    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_below="@+id/brightness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/cardview_shadow_start_color"/>

    <TextView
        android:id="@+id/tv_temperature"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_below="@+id/brightness"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:layout_alignLeft="@+id/brightness"
        android:gravity="left"
        android:text="Temperature :"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/temperature"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_below="@+id/brightness"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#11000000"
        android:ems="10"
        android:gravity="right"
        android:text="2500K"
        android:textColor="#ffffff"
        android:textSize="18sp" />
    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_below="@+id/temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="6500"
        android:background="@color/cardview_shadow_start_color"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_hue"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/seekBar2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#11000000"
        android:ems="10"
        android:gravity="center"
        android:text="Color"
        android:textColor="#ffffff"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/hue"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/seekBar2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#11000000"
        android:ems="10"
        android:gravity="center"
        android:text="Color"
        android:textColor="#ffffff"
        android:visibility="invisible" />
    <SeekBar
        android:id="@+id/seekBar3"
        android:layout_below="@+id/hue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:max="360"
        android:layout_margin="10dp"
        android:background="@drawable/hue_background"
        android:layout_centerVertical="true" />
    <TextView
        android:id="@+id/tv_saturation"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/seekBar3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#11000000"
        android:ems="10"
        android:gravity="center"
        android:text="Saturation"
        android:textColor="#ffffff"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/saturation"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/seekBar3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#11000000"
        android:ems="10"
        android:gravity="center"
        android:text="Saturation"
        android:textColor="#ffffff"
        android:visibility="invisible" />
    <SeekBar
        android:id="@+id/seekBar4"
        android:layout_below="@+id/saturation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:max="100"
        android:background="@color/cardview_shadow_start_color"
        android:layout_margin="10dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/detailTitle"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#11000000"
        android:ems="10"
        android:gravity="center"
        android:text="Title"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detailDesc"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailTitle"
        android:layout_centerHorizontal="true"
        android:background="#11000000"
        android:ems="10"
        android:gravity="center"
        android:text="description"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:visibility="invisible" />


</RelativeLayout>